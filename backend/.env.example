# Backend environment variables
# Copy this file to .env and fill values

# Local MongoDB connection (adjust DB name as needed)
MONGO_URI=mongodb://127.0.0.1:27017/ayursutra

# JWT config
JWT_SECRET=replace_with_a_long_random_string
JWT_EXPIRES_IN=7d

# Server port
PORT=5000

# CORS: frontend origins
# Single origin (legacy)
FRONTEND_ORIGIN=http://localhost:5173

# Multiple allowed origins (comma-separated). Example for production:
# FRONTEND_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com

# Optional regex to allow dynamic preview URLs (e.g., Vercel preview deployments)
# Example: allow any subdomain of vercel.app
# FRONTEND_REGEX=^https?://.*\.vercel\.app$
